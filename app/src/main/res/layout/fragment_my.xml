<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:gravity="center"
        android:background="#789"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/FM_My_Photo"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/FM_My_LoginRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="登录|注册"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/FM_My_ApplyForLive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="-25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape_button_usable"
        android:text="我 要 直 播"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.edu.gdqy.Tool.ImageTextGroupView
            android:id="@+id/FM_My_History"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/selector_groupview"/>

        <com.edu.gdqy.Tool.ImageTextGroupView
            android:id="@+id/FM_My_Manager"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/selector_groupview"/>

        <com.edu.gdqy.Tool.ImageTextGroupView
            android:id="@+id/FM_My_Release"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/selector_groupview"/>

        <com.edu.gdqy.Tool.ImageTextGroupView
            android:id="@+id/FM_My_Upload"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/selector_groupview"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/FM_My_MyFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/shape_button_more"
            android:text="我的好友"/>

        <Button
            android:id="@+id/FM_My_MoreSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/shape_button_more"
            android:text="更多设置"/>

    </LinearLayout>

</LinearLayout>
